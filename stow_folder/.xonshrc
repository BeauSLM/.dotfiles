# don't type cd anymore wooo
$AUTO_CD = True

$AUTO_SUGGEST_IN_COMPLETIONS = True
$COMPLETION_MODE             = 'menu-complete'
$COMPLETIONS_CONFIRM         = False

# faster
$COMMANDS_CACHE_SAVE_INTERMEDIATE = True

# * matches files beginning with '.'
$DOTGLOB = True

$VI_MODE = True

# TODO: xxh
xontrib load abbrevs fish_completer zoxide prompt_starship kitty hist_navigator direnv omx_git

abbrevs['ls'   ] = 'exa'
abbrevs['ll'   ] = 'exa -la --git'
abbrevs['mkdir'] = 'mkdir -p'

abbrevs['upall'  ] = 'paru -Syu --noconfirm'
abbrevs['cleanup'] = 'paru -Rns $(paru -Qtdq)'
abbrevs['mirror' ] = 'sudo reflector -f 30 -l 30 --number 10 --verbose --save /etc/pacman.d/mirrorlist'
abbrevs['rip'    ] = "expac --timefmt = '%Y-%m-%d %T' '%l\t%n %v' | sort | tail -200 | nl"

abbrevs['lg'] = 'lazygit'

abbrevs['e']  = 'nvim'
